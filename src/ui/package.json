{
  "name": "ui",
  "version": "1.0.0",
  "description": "UI code of the project",
  "repository": {
    "type": "git",
    "url": "https://github.com/DomiKlein/bugtracker"
  },
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf ./out && rm -f ./styles/*.css",
    "compileLess": "lessc ./styles/root.less ./styles/root.css",
    "compileTypeScript": "tsc -p .",
    "addEssentials": "cp ./code/index.html ./out/index.html && cp ./code/favicon.ico ./out/favicon.ico",
    "build": "npm run clean && npm run compileLess && npm run compileTypeScript && npm run addEssentials"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "less": "^4.1.2",
    "typescript": "^4.4.3"
  }
}
